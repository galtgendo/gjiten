#! /bin/sh
case "$1" in
    configure)
	iconv -c -f EUC-JP -t UTF-8 /usr/share/edict/kanjidic -o /usr/share/gjiten/kanjidic
	iconv -c -f EUC-JP -t UTF-8 /usr/share/edict/edict -o /usr/share/gjiten/edict
	iconv -c -f EUC-JP -t UTF-8 /usr/share/edict/compdic -o /usr/share/gjiten/compdic
    ;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

esac

#DEBHELPER#

exit 0
